<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.yxgu.pic">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".net.NetWorkActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="top.yxgu.pic.NetWorkActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FilelistActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="top.yxgu.pic.FilelistActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PicActivity"
            android:label="@string/title_activity_pic">
            <intent-filter>
                <action android:name="top.yxgu.pic.PicActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PicPageActivity">
            <intent-filter>
                <action android:name="top.yxgu.pic.PicPageActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddServerActivity"
            android:label="@string/title_activity_add_server">
            <intent-filter>
                <action android:name="top.yxgu.pic.AddServerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>